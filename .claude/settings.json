{
  "permissions": {
    "allow": [
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch",
      "Task",
      "Bash(*)",
      "mcp__*"
    ],
    "deny": [
      "Bash(*~/.aws*)",
      "Bash(*~/.ssh*)",
      "Bash(*~/.gnupg*)",
      "Bash(*~/.config/gcloud*)",
      "Bash(*~/.databrickscfg*)",
      "Bash(*~/.netrc*)",
      "Bash(* --profile prod*)",
      "Bash(*PROD*)",
      "Bash(*prod.*)",
      "Bash(ssh *)",
      "Bash(scp *)",

      "Bash(git push origin main)",
      "Bash(git push origin main *)",
      "Bash(git push origin master)",
      "Bash(git push origin master *)",
      "Bash(git push origin dev)",
      "Bash(git push origin dev *)",
      "Bash(git push origin develop)",
      "Bash(git push origin develop *)",
      "Bash(git push -f*)",
      "Bash(git push --force*)",
      "Bash(git push * --force*)",
      "Bash(git push --delete*)",

      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/secrets/**)",
      "Read(**/*.pem)",
      "Read(**/*credential*)",
      "Write(**/.env*)",
      "Write(**/secrets/**)",
      "Write(**/*.pem)"
    ]
  }
}
