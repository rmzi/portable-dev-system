# =============================================================================
# Portable Dev System - Ghostty Config
# Copy to: ~/.config/ghostty/config
# =============================================================================

# -----------------------------------------------------------------------------
# Font
# -----------------------------------------------------------------------------
font-family = JetBrains Mono
font-size = 14

# -----------------------------------------------------------------------------
# Theme
# -----------------------------------------------------------------------------
# Duotone Dark works well with the starship prompt colors
theme = Duotone Dark

# -----------------------------------------------------------------------------
# Window
# -----------------------------------------------------------------------------
window-padding-x = 8
window-padding-y = 8
window-decoration = true

# macOS only (ignored on Linux)
macos-titlebar-style = tabs

# -----------------------------------------------------------------------------
# Shell Integration
# -----------------------------------------------------------------------------
shell-integration = zsh
shell-integration-features = cursor,sudo,title

# -----------------------------------------------------------------------------
# Quick Terminal (global hotkey)
# -----------------------------------------------------------------------------
# macOS: Cmd+` | Linux: Super+`
keybind = global:cmd+grave_accent=toggle_quick_terminal
keybind = global:super+grave_accent=toggle_quick_terminal
quick-terminal-position = top
quick-terminal-screen = main
quick-terminal-animation-duration = 0.1

# -----------------------------------------------------------------------------
# Splits - Vim-style Navigation
# -----------------------------------------------------------------------------
# Create splits (macOS: Cmd | Linux: Ctrl+Shift)
keybind = cmd+d=new_split:right
keybind = ctrl+shift+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = ctrl+shift+s=new_split:down

# Navigate splits with Alt (cross-platform)
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:bottom
keybind = alt+k=goto_split:top
keybind = alt+l=goto_split:right

# Resize splits
keybind = alt+shift+h=resize_split:left,20
keybind = alt+shift+j=resize_split:down,20
keybind = alt+shift+k=resize_split:up,20
keybind = alt+shift+l=resize_split:right,20

# Split management
keybind = cmd+shift+z=toggle_split_zoom
keybind = ctrl+shift+z=toggle_split_zoom
keybind = cmd+shift+equal=equalize_splits
keybind = ctrl+shift+equal=equalize_splits

# Close split
keybind = cmd+w=close_surface
keybind = ctrl+shift+w=close_surface

# -----------------------------------------------------------------------------
# Tabs
# -----------------------------------------------------------------------------
keybind = cmd+t=new_tab
keybind = ctrl+shift+t=new_tab
keybind = cmd+shift+left_bracket=previous_tab
keybind = cmd+shift+right_bracket=next_tab
keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = alt+1=goto_tab:1
keybind = alt+2=goto_tab:2
keybind = alt+3=goto_tab:3
keybind = alt+4=goto_tab:4
keybind = alt+5=goto_tab:5

# -----------------------------------------------------------------------------
# Clipboard
# -----------------------------------------------------------------------------
clipboard-read = allow
clipboard-write = allow
copy-on-select = clipboard
